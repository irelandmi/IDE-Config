{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Bash Script",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c", 
                "./your-script.sh"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "shell": {
                    "executable": "C:\\Program Files\\Git\\bin\\bash.exe", // For Git Bash on Windows
                    "args": ["-l", "-i"]
                },
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
